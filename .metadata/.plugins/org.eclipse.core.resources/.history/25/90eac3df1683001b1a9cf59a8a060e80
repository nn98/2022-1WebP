package main;

import java.awt.Container;
import java.awt.FlowLayout;
import java.io.FileInputStream;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;


public class Counting extends JFrame{

	static String fP="C:/Non/main.txt",sL;
	Counting(){
		setTitle("Stock List");
		setSize(400,300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Container c=getContentPane();
		c.setLayout(new FlowLayout());
//		JTextArea t=new
		String[]lL=sL.split("\n");
		JLabel l1=new JLabel(lL[0]),l2=new JLabel(lL[1]);
		JButton b1=new JButton("+"),b2=new JButton("-");
		c.add(l1);
		c.add(b1);
		c.add(b2);
		setVisible(true);
	}
	public static void main(String[] args)throws Exception {
		try {
			FileInputStream f=null;
			f=new FileInputStream(fP);
			byte[]rB=new byte[f.available()];
			while(f.read(rB)!=-1);
			sL=new String(rB);
			System.out.println(sL);
			f.close();

		}catch(Exception e) {
			e.getStackTrace();
		}
		new Counting();
	}

}
