package main;

import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.FlowLayout;
import java.awt.GridLayout;
import java.io.FileInputStream;

import javax.swing.JButton;
import javax.swing.JComponent;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;


public class Counting extends JFrame{

	static String fP="C:/Non/main.txt",sL;
	Counting(){
//		setTitle("Stock List");
//		setSize(400,300);
		String[]lL=sL.split("\n");
		JPanel p1=new JPanel(),tP=new JPanel();
		tP.add(new JLabel("Stock List"));
		p1.setLayout(new GridLayout(5,2,5,5));
		int num=0;
		JComponent[]comp= {
				new JLabel(lL[num++]),new JButton("+"),new JButton("-"),
				new JLabel(lL[num++]),new JButton("+"),new JButton("-"),
				new JLabel(lL[num++]),new JButton("+"),new JButton("-"),
				new JLabel(lL[num++]),new JButton("+"),new JButton("-")
		};
		for(JComponent c:comp)p1.add(c);
		p1.setSize(400,300);
		add(BorderLayout.NORTH,tP);
		add(BorderLayout.CENTER,p1);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		pack();
//		
//		Container c=getContentPane();
//		c.setLayout(new FlowLayout());
////		JTextArea t=new
//		System.out.println(lL[0]);
//		JLabel l1=new JLabel(lL[0]),l2=new JLabel(lL[1]);
//		JButton b1=new JButton("+"),b2=new JButton("-");
//		c.add(l1);
//		c.add(b1);
//		c.add(b2);
//		setVisible(true);
	}
	public static void main(String[] args)throws Exception {
		try {
			FileInputStream f=null;
			f=new FileInputStream(fP);
			byte[]rB=new byte[f.available()];
			while(f.read(rB)!=-1);
			sL=new String(rB);
			System.out.println(sL);
			f.close();

		}catch(Exception e) {
			e.getStackTrace();
		}
		Counting c=new Counting();
		c.setVisible(true);
		c.setLocationRelativeTo(null);
	}

}
